{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>
    <div class="w-75 m-auto">
        <form method="get">
            <div class="form-group">
                <label for="prix">prix</label>
                <input type="radio" name="prix" id="prix" value="checked">croissant
                <input type="radio" name="prix" id="prix" value="unchecked">descroissant
            </div>
            <div class="form-group">
                <label for="vendeur">vendeur</label>
                <input type="radio" name="vendeur" id="vendeur" value="checked">croissant
                <input type="radio" name="vendeur" id="vendeur" value="unchecked">descroissant
            </div>
            <div class="form-group">
                <label for="categorie">categorie</label>
                <input type="radio" name="categorie" id="categorie" value="checked">croissant
                <input type="radio" name="categorie" id="categorie" value="unchecked">descroissant
            </div>
            <button class="btn btn-primary">trier</button>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Description</th>
                <th>QuantiteStock</th>
                <th>Statut</th>
                <th>Couleur</th>
                <th>Vendeur</th>
                <th>categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.quantiteStock }}</td>
                <td>{{ produit.statut ? 'Yes' : 'No' }}</td>
                <td>{{ produit.couleur }}</td>
                <td>{{ produit.vendeur.nom~' '~produit.vendeur.prenom }}</td>
                <td>{{ produit.categorie.nom }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
